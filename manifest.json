{
	"name": "Eye Care Notifier",
	"version": "1.0.0",
	"manifest_version": 2,

	"description": "Notifies periodically to stop staring at computer screen",
	"icons": {
		"128": "eye-icon.png",
		"16": "eye-icon.png",
		"48": "eye-icon.png"
	},
	"author": "Bhaskar Reddy Venkatram",

	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},

	"browser_action": {
		"default_icon": "eye-icon.png",
		"default_popup": "options.html"
	},

	"options_page": "options.html",
	"options_ui": {
		"page": "options.html",
		"chrome_style": true
	},

	"minimum_chrome_version": "42",

	"permissions": ["notifications", "storage", "alarms"]
}
